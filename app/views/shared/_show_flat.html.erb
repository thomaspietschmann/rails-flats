<div class="flat-container">
  <h4><%= @flat.name %></h4>
  <p><%= @flat.description %></p>
  <p>Address: <%= @flat.address %></p>
  <p>Price per night: <%= @flat.price_per_night %></p>
  <p>Max number of guests: <%= @flat.number_of_guests %></p>
  <%= form_for @flat do |f|%>
    <%= f.number_field :number_of_guests, min: 1, max: :number_of_guests %>
    <%= f.submit %>
  <% end %>
</div>
